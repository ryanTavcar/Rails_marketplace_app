<%= form_with model: product do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label(:name, class:"form-label") %>
    <%= form.text_field(:name, class:"form-control") %>
  </div>

  <div class="form-group mb-3">
    <%= form.label(:price, class:"form-label") %>
    <%= form.number_field(:price, class:"form-control") %>
  </div>

  <div class="form-group mb-3">
    <%= form.label(:material_id, class:"form-label") %>
    <%= form.select(:material_id, materials.map{|mat| [mat.name, mat.id]}, class:"form-select") %>
  </div>

  <div class="form-group mb-3">
    <%= form.label(:description, class:"form-label") %>
    <%= form.text_area(:description, class:"form-control") %>
  </div>

  <div class="form-group mb-3">
    <%= form.label(:category_id, class:"form-label") %>
    <%= form.select(:category_id, categories.map{|cat| [cat.name, cat.id]}, class:"form-select") %>
  </div>

  <div class="form-group mb-3">
    <%= form.label(:picture, class:'form-label') %>
    <%= form.file_field(:picture, accept: 'image/png,image/jpg,image/jpeg', class:'form-control-file') %>
    <small class="form-text text-muted">PNG, JPG or JPEG only</small>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
