
<h1> <%= @profile.first_name %> <%= @profile.last_name %> </h1>

<P> <%= @profile.user.email %> </p>

<p> <%= @profile.user.username %> </p>

<P> <%= @profile.biography %> </p>

<% @profile.user.products.each do |product| %>
    <%= link_to product.name, product_path(product)%>
<% end %>

<div class="container">
  <div class="d-flex justify-content-envenly">
    <%= link_to('Edit', edit_profile_path(@profile.user.id), class: "btn btn-warning mr-3") if current_user && current_user.id == @profile.user.id %>
    <%= link_to('Delete', @profile.user, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger mr-3") if current_user && current_user.id == @profile.user.id %>
  </div>
</div>
